argo-rollouts:
  fullnameOverride: argo-rollouts

  controller:
    metrics:
      enabled: true
      serviceMonitor:
        enabled: {{prometheus.serviceMonitor.enabled}}
        namespace: addon-argo-rollouts

  dashboard:
    podAnnotations:
      link.argocd.argoproj.io/external-link: "https://rollouts.{{hostname.public}}"

    ingress:
      enabled: false
      ingressClassName: "nginx"
      hosts:
        - "rollouts.{{hostname.public}}"

route:
  resources:
    - apiVersion: networking.istio.io/v1beta1
      kind: Gateway
      metadata:
        name: argo-rollouts-dashboard
      spec:
        selector:
          istio: ingressgateway
        servers:
          - hosts:
              - "rollouts.{{hostname.public}}"
            port:
              number: 80
              name: http
              protocol: HTTP

    - apiVersion: networking.istio.io/v1beta1
      kind: VirtualService
      metadata:
        name: argo-rollouts-dashboard
      spec:
        hosts:
          - "rollouts.{{hostname.public}}"
        gateways:
          - argo-rollouts-dashboard
        http:
          - route:
              - destination:
                  host: argo-rollouts-dashboard
                  port:
                    number: 3100

    - apiVersion: security.istio.io/v1beta1
      kind: AuthorizationPolicy
      metadata:
        name: oauth2-proxy-rollouts
        namespace: istio-system
      spec:
        selector:
          matchLabels:
            istio: ingressgateway
        action: CUSTOM
        provider:
          name: oauth2-proxy
        rules:
        - to:
          - operation:
              hosts:
              - "rollouts.{{hostname.public}}"
