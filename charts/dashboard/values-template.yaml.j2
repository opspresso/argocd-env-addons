dashboard:

{% if dashboard is defined %}
  resources:
    requests:
      cpu: "{{dashboard.requests.cpu}}"
      memory: "{{dashboard.requests.memory}}"
    limits:
      cpu: "{{dashboard.limits.cpu}}"
      memory: "{{dashboard.limits.memory}}"
{% endif %}

  podAnnotations:
    link.argocd.argoproj.io/external-link: "https://dashboard.{{hostname.public}}"

  ingress:
    enabled: false
    hosts:
      - "dashboard.{{hostname.public}}"

route:
  resources:
    - apiVersion: networking.istio.io/v1beta1
      kind: Gateway
      metadata:
        name: dashboard
      spec:
        selector:
          istio: ingressgateway
        servers:
          - hosts:
              - "dashboard.{{hostname.public}}"
            port:
              number: 80
              name: http
              protocol: HTTP

    - apiVersion: networking.istio.io/v1beta1
      kind: VirtualService
      metadata:
        name: dashboard
      spec:
        hosts:
          - "dashboard.{{hostname.public}}"
        gateways:
          - dashboard
        http:
          - route:
              - destination:
                  host: dashboard
                  port:
                    number: 80

    - apiVersion: security.istio.io/v1beta1
      kind: AuthorizationPolicy
      metadata:
        name: oauth2-proxy-dashboard
        namespace: istio-system
      spec:
        selector:
          matchLabels:
            istio: ingressgateway
        action: CUSTOM
        provider:
          name: oauth2-proxy
        rules:
        - to:
          - operation:
              hosts:
              - "dashboard.{{hostname.public}}"
